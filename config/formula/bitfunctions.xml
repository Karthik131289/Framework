		<formula name="LeftShift">
			<description>Shifts the number left by the specified number of bits.</description>
			<signature>LeftShift(number, by)</signature>
			<category>Bit Operation</category>
	  		<Class>com.tplus.transform.design.formula.functions.StaticMethodFunction</Class>
			<property name="class" value="com.tplus.transform.runtime.formula.BitFunctions" />
			<property name="method" value="leftShift" />
    	</formula>
		<formula name="RightShift">
			<description>Shifts the number right by the specified number of bits. It propagates the sign bit.</description>
			<signature>RightShift(number, by)</signature>
			<category>Bit Operation</category>
	  		<Class>com.tplus.transform.design.formula.functions.StaticMethodFunction</Class>
			<property name="class" value="com.tplus.transform.runtime.formula.BitFunctions" />
			<property name="method" value="rightShift" />
    	</formula>
		<formula name="UnsignedRightShift">
			<description>Shifts the number right by the specified number of bits. It propagates the zero bit.</description>
			<signature>UnsignedRightShift(number, by)</signature>
			<category>Bit Operation</category>
	  		<Class>com.tplus.transform.design.formula.functions.StaticMethodFunction</Class>
			<property name="class" value="com.tplus.transform.runtime.formula.BitFunctions" />
			<property name="method" value="unsignedRightShift" />
    	</formula>
		<formula name="IsBitSet">
			<description>Gets the bit at the specified offset (returns true or false). Note that the index/offset of the least significant bit is zero.</description>
			<signature>IsBitSet(number, at)</signature>
			<category>Bit Operation</category>
	  		<Class>com.tplus.transform.design.formula.functions.StaticMethodFunction</Class>
			<property name="class" value="com.tplus.transform.runtime.formula.BitFunctions" />
			<property name="method" value="isBitSet" />
    	</formula>
		<formula name="SetBit">
			<description>Sets the bit at specified offset and returns the modified value. Note that the index/offset of the least significant bit is zero.</description>
			<signature>SetBit(number, at)</signature>
			<category>Bit Operation</category>
	  		<Class>com.tplus.transform.design.formula.functions.StaticMethodFunction</Class>
			<property name="class" value="com.tplus.transform.runtime.formula.BitFunctions" />
			<property name="method" value="setBit" />
    	</formula>
		<formula name="ClearBit">
			<description>Clears the bit at specified offset and returns the modified value. Note that the index/offset of the least significant bit is zero.</description>
			<signature>ClearBit(number, at)</signature>
