			<property name="class" value="com.tplus.transform.runtime.formula.BitFunctions" />
			<property name="method" value="clearBit" />
    	</formula>
		<formula name="FlipBit">
			<description>Flips the bit at specified offset and returns the modified value. Note that the index/offset of the least significant bit is zero.</description>
			<signature>FlipBit(number, at)</signature>
